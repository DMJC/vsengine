<mission>
	<settings>
		<origin  planet="earth" x="0000" y="100" z="000.0"/>
	</settings>

	<variables>
		<var name="defaultplayer" value="blue"/>
		<var name="system" value="enigma_sector/blake" />
		<var name="mission_name" value="Bounty Mission" />
		<var name="description" value="Vorremmo porre una taglia sulla testa del comandante di una pattuglia ISO che sta navigando a pochi sistemi da quì.  Se individuerai e distruggerai il leader, sarai ricompensato con 17680 crediti. I compagni molto probabilmente si disperderanno non appena il loro capo sarà stato distrutto." />
	</variables>
        <flightgroups>
                <flightgroup name="blue" faction="confed" type="nova" ainame="default" waves="1" nr_ships="2">
